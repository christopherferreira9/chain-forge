    "@chain-forge/solana": "portal:../../npm/@chain-forge/solana",
    "@inquirer/prompts": "^7.0.0",
    "@solana/web3.js": "^1.87.0",
    "bitcoinjs-lib": "^6.1.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
